<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>Tietokanta.Servlets.Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>Tietokanta.Servlets.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Kirjautuminen</servlet-name>
        <servlet-class>Tietokanta.Servlets.Kirjautuminen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Omasivu</servlet-name>
        <servlet-class>Tietokanta.Servlets.Omasivu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Varaussivu</servlet-name>
        <servlet-class>Tietokanta.Servlets.Varaussivu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Kirjautuminen</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Omasivu</servlet-name>
        <url-pattern>/omasivu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Varaussivu</servlet-name>
        <url-pattern>/varaussivu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
